---
let isOpen = false;
function toggle_button() {
  isOpen = !isOpen;
}
---

<aside
  class="bg-gradient-to-r from-slate-950 from-10% via-slate-800 via-85% to-slate-700 to-99% text-white rounded-tr-xl rounded-br-lg font-body h-screen overflow-hidden transition-all duration-500 border border-violet-500 w-1/6"
  class="{ 'w-8': !isopen, 'w-1/6': isopen }"
>
  <div>
    <button @click="toggle_button" class="text-white">
    </button>
    <div class="flex flex-row items-center">
      <img
        alt=""
        width="75"
        class="rounded-full border border-slate-800 mx-3 my-3"
      />
      <div class="flex flex-col">
        <span>Dorothy White</span>
        <span class="text-sm text-slate-500"
          >Coordnator</span
        >
        <button class="rounded-lg text-sm text-pink-500">
          Sign Out
        </button>
      </div>
    </div>
    <hr />
  </div>
  <div></div>
  <div class="flex flex-row gap-6"></div>
  <div class="bg-red-100">
    <!-- <slot /> -->
  </div>
  <div
    class="border border-slate-600 rounded-lg mt-6 px-2 py-2"
  >
  </div>
  <div
    class="border border-slate-600 rounded-lg mt-6 px-2 py-2 duration-200 hover:translate-x-3"
  >
    <span>Colleges</span>
  </div>
  <div
    class="border border-slate-600 rounded-lg mt-6 px-2 py-2 hover:translate-x-1"
  >
    <span>Inbox</span>
  </div>
  <div class="mt-6 px-2 py-2 rounded-lg">
    <span>Patinets</span>
  </div>
  <div class="mt-6 px-2 py-2 rounded-lg">
    <span> Account Settings</span>
  </div>
</aside>
