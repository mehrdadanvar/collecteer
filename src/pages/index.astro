---
import Layout from "../layouts/Layout.astro";
import IndexHero from "../components/IndexHero.astro";
import IndexRetailer from "../components/IndexRetailer.astro";
// import HeroTerminal from "../components/HeroTerminal.vue";
import IndexCore from "../components/IndexCore.astro";
---

<div class="diagnol bg-gray-900 relative">
  <Layout>
    <IndexHero />

    <section
      class="mx-auto w-3/4 mt-56 mb-96 text-teal-600 border border-slate-800 rounded-3xl"
    >
      <div class="h-5/6 m-auto felx flex-col">
        <p class="text-4xl p-6">A collectiong of</p>
        <div class="hexagon">
          <img
            src="python.svg"
            alt=""
            width="100"
            class="ml-12 mb-12 transition-all ease-linear duration-500 hover:scale-110"
          />
        </div>
        <img src="node.svg" alt="" width="150" class="ml-36 mb-12" />
        <p class="ml-36 text-4xl">
          classes to quickly retrieve data from retailers' websites
        </p>
      </div>
    </section>
  </Layout>
</div>
<IndexCore />
<div class="main relative"></div>
<section class="bg-gray-800">
  <div class="test">
    <IndexRetailer />
    <img src="neon2.svg" alt="" class="-z-10" width="500" />
    <p class="">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Aliquid culpa
      natus quam, doloribus a praesentium reiciendis quis. Eligendi, corrupti
      deserunt labore repellendus perspiciatis quisquam delectus dolorum maiores
      voluptatibus nihil sed.
    </p>
  </div>
  <section class="flex flex-col">
    <div><img src="neon.svg" alt="" width="250" /></div>
    <div><img src="neon.svg" alt="" width="250" class="ml-24" /></div>
    <div><img src="neon.svg" alt="" width="250" /></div>
    <div><img src="neon.svg" alt="" width="250" class="ml-52" /></div>
    <div><img src="neon.svg" alt="" width="250" /></div>
    <div><img src="neon.svg" alt="" width="250" /></div>
  </section>
</section>

<style>
  .test {
    background-image: url("neon2.svg");
    background-repeat: repeat;
  }
  .diagnol::after {
    content: "";
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 100%;
    height: 150px; /* Adjust the height as needed */
    background-color: #111827; /* Set the background color of the line */
    transform: skewY(3deg); /* Adjust the angle of the diagonal line */
    transform-origin: 0;
  }
  .main::before {
    content: "";
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 100%;
    height: 150px; /* Adjust the height as needed */
    background-color: white; /* Set the background color of the line */
    transform: skewY(3deg); /* Adjust the angle of the diagonal line */
    transform-origin: 0;
  }
</style>

